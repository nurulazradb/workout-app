<!DOCTYPE html>
<html>
  <head>
    <title>WorkoutApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom box-shadow">
      <h5 class="my-0 mr-md-auto font-weight-normal">
        <%= link_to "Athletes Den", root_path, class: 'p-2 text-dark' %>
      </h5>
      <nav class="my-2 my-md-0 mr-md-3">
        <%= link_to "Home", root_path, class: 'p-2 text-dark' %>
        <% if user_signed_in? %>
        <%= "Signed in as #{current_user.email}" %>
        <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'btn btn-danger' %>
        <% end %>
      </nav>
      <div class="btn-group">
        <%= link_to 'Sign up', new_user_registration_path, class: 'btn btn-outline-primary' %>
        <%= link_to 'Sign in', new_user_session_path, class: 'btn btn-outline-primary' %>
      </div>
    </div>

    <div class="container">
      <% flash.each do |key, msg| %>
        <div class="alert alert-<%= key == 'notice' ? 'success' : 'danger' %>" role="alert">
          <%= msg %>
        </div>
      <% end %>

      <%= yield %>

      <footer class="pt-4 my-md-5 pt-md-5 border-top">
        <div class="row">
          <div class="col-12 col-md">
            <small class="d-block mb-3 text-muted">&copy; 2017-2018</small>
          </div>
        </div>
      </footer>
    </div>

  </body>
</html>
